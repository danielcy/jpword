<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#0099cc"
  tools:context="com.cynb.jpword.activity.AddWordActivity">
  <RelativeLayout
    android:id="@+id/add_word_content"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_marginTop="300dp"
    >
    <TextView
      android:id="@+id/chinese_input_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/chinese_input"
      android:textSize="20sp"
      />
    <EditText
      android:id="@+id/chinese_input_edit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text"
      android:layout_below="@+id/chinese_input_label"
      android:hint="@string/hint_chinese_meaning"
      android:theme="@style/MyEditText"
    />
    <TextView
      android:id="@+id/japanese_input_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/japanese_input"
      android:layout_below="@+id/chinese_input_edit"
      android:layout_marginTop="20dp"
      android:textSize="20sp"
      />
    <EditText
      android:id="@+id/japanese_input_edit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text"
      android:layout_below="@+id/japanese_input_label"
      android:hint="@string/hint_japanese_meaning"
      android:theme="@style/MyEditText"
      />
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/button_layout"
      android:layout_below="@+id/japanese_input_edit"
      android:layout_marginTop="60dp"
      >
      <Button
        android:id="@+id/commit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
      <Button
        android:id="@+id/undo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/undo_last_word"
        android:layout_toLeftOf="@+id/commit_btn"
        android:layout_toStartOf="@+id/commit_btn"
        />

    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>
